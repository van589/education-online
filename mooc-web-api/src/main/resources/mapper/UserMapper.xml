<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.van589.mooc.web.api.dao.UserMapper">
    <resultMap id="BaseResultMap" type="com.van589.mooc.domain.User">
        <!--
          WARNING - @mbg.generated
        -->
        <id column="id" jdbcType="VARCHAR" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="nickname" jdbcType="VARCHAR" property="nickname"/>
        <result column="password" jdbcType="VARCHAR" property="password"/>
        <result column="sex" jdbcType="VARCHAR" property="sex"/>
        <result column="phone" jdbcType="VARCHAR" property="phone"/>
        <result column="email" jdbcType="VARCHAR" property="email"/>
        <result column="wechar" jdbcType="VARCHAR" property="wechar"/>
        <result column="collect" jdbcType="INTEGER" property="collect"/>
        <result column="education" jdbcType="VARCHAR" property="education"/>
        <result column="vip" jdbcType="TIMESTAMP" property="vip"/>
        <result column="firsttime" jdbcType="TIMESTAMP" property="firsttime"/>
        <result column="updatetime" jdbcType="TIMESTAMP" property="updatetime"/>
        <result column="lasttime" jdbcType="TIMESTAMP" property="lasttime"/>
    </resultMap>

    <sql id="userColumns">
        a.id,
        a.name,
        a.nickname,
        a.password,
        a.sex,
        a.phone,
        a.email,
        a.wechar,
        a.collect,
        a.education,
        a.vip,
        a.firsttime,
        a.updatetime,
        a.lasttime
    </sql>

    <select id="login" resultType="com.van589.mooc.domain.User">
        SELECT
        <include refid="userColumns"/>
        FROM
        user AS a
        WHERE a.name = #{name}
        OR a.email = #{name}
        OR a.phone = #{name}
    </select>

    <insert id="insert" parameterType="com.van589.mooc.domain.User" useGeneratedKeys="true" keyProperty="firsttime">
        INSERT INTO `user`
        (id,
         `name`,
         nickname,
         `password`,
         sex,
         phone,
         email,
         wechar,
         education,
         firsttime,
         updatetime,
         lasttime)
        VALUES (#{id},
                #{name},
                #{nickname},
                #{password},
                #{sex},
                #{phone},
                #{email},
                #{wechar},
                #{education},
                now(),
                now(),
                now())
    </insert>

    <select id="selectByName" resultType="com.van589.mooc.domain.User">
        select
        <include refid="userColumns"/>
        from user as a
        where a.name = #{name}
    </select>

    <update id="update">
        UPDATE
            user
        SET name       = #{name},
            nickname   = #{nickname},
            password   = #{password},
            sex        = #{sex},
            phone      = #{phone},
            email      = #{email},
            wechar     = #{wechar},
            education  = #{education},
            firsttime  = #{firsttime},
            updatetime = #{updatetime},
            lasttime   = #{lasttime}
        WHERE id = #{id}
    </update>

    <select id="selectById" resultType="com.van589.mooc.domain.User">
        select
        <include refid="userColumns"/>
        from user as a
        where a.id = #{id}
    </select>
</mapper>